# Where to find template files (unique folder)
set(ADA_RESOURCE_DIR "@ADA_RESOURCE_DIR@")

# CMake functions for Ada packages
list(APPEND CMAKE_MODULE_PATH @CMAKE_INSTALL_PREFIX@/share/@PROJECT_NAME@/cmake)
include(ada_project)

# Common prefix where built things end up (not installed, but for using)
list(APPEND ADA_GPR_DIRS
        @CMAKE_INSTALL_PREFIX@/share/gpr
        ${CMAKE_INSTALL_PREFIX}/share/gpr
        @CMAKE_INSTALL_PREFIX@/share/gprauto
        ${CMAKE_INSTALL_PREFIX}/share/gprauto)

list(REMOVE_DUPLICATES ADA_GPR_DIRS)
list(SORT ADA_GPR_DIRS)





